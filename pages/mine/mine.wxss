.reward{
  border-bottom: 1px solid #e6e7eb;
}
.brief-introduction{
  color: #999999;
  font-size:12px;
}
.line-right {
  height: 46px;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:12px 0px;
   z-index:999;
}
.line-right .title{
  font-weight:bold;
  font-size:16px;
}